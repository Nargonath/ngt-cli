{
  "name": "ngt-cli",
  "version": "0.0.0-development",
  "description": "CLI to leverage ngt-scripts for easy projects setup ",
  "main": "dist/bin/ngt-cli.js",
  "bin": "dist/bin/ngt-cli.js",
  "scripts": {
    "build": "babel lib -d dist -s --delete-dir-on-start",
    "lint": "eslint \"{{lib,test}/**/*.js,*.js}\" ",
    "test": "echo \"Error: no test specified\" && exit 1",
    "precommit": "lint-staged",
    "cm": "git-cz",
    "commitmsg": "commitlint -e",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "files": ["dist"],
  "engines": {
    "node": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nargonath/ngt-cli.git"
  },
  "keywords": ["cli", "nodejs", "development", "ngt-scripts", "async-await", "project-template"],
  "author": "Nargonath <jonas.pauthier@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Nargonath/ngt-cli/issues"
  },
  "homepage": "https://github.com/Nargonath/ngt-cli#readme",
  "lint-staged": {
    "{{lib,test}/**/*.js,*.js}": ["prettier --write", "eslint", "git add"],
    "{{lib,test}/**/*.json,*.json}": ["prettier --write", "git add"]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "singleQuote": true
  },
  "dependencies": {
    "chalk": "2.3.2",
    "cross-spawn": "6.0.5",
    "update-notifier": "2.3.0"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.40",
    "@commitlint/cli": "6.1.3",
    "@commitlint/config-conventional": "6.1.3",
    "@dixeed/eslint-config": "2.0.0",
    "babel-cli": "7.0.0-beta.3",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "8.2.2",
    "babel-plugin-module-resolver": "3.1.0",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-preset-env": "1.6.1",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "4.18.2",
    "husky": "0.14.3",
    "lint-staged": "7.0.0",
    "prettier": "1.11.1",
    "semantic-release": "^12.4.1",
    "travis-deploy-once": "^4.3.4"
  }
}
